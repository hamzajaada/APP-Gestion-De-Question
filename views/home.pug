html
  head
    
    title Questions and Answers
    link(rel="stylesheet" href="/styles/home.css")

  body
    header
      

      h1 Questions and Answers
      if user   
            h1 Good afternoon #{user.username}
            a.lien(href="/logout") logout
      else 
            a.lien(href="/login") login  
            a.lien(href="/register") Register
    main

      if user  
        section.question-form
        
          form(action="/question/add_question", method="POST")
            

            label(for="question") Your Question
            input(type="text", name="question")
            input(type="hidden", name="user_id" value=`${user._id}`)

            button(type="submit") Ask

      section.question-list

     

            
            h2 Question
            p Question: #{question}
            p Date: #{date}
            p Asked by: #{userName} (#{userEmail})


